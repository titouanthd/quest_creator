{% extends "layouts/front_layout.html.twig" %}

{% block body %}
    <h1>World</h1>
    <a class="btn btn-sm btn-secondary" href="{{ path('app_front_world_edit', {'id': world.id}) }}">Edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ world.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ world.name }}</td>
            </tr>
            <tr>
                <th>Universe</th>
                <td>
                    <a href="{{ path('app_front_universe_show', {'id': world.universe.id}) }}">
                        {{ world.universe.name }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ world.updatedAt ? world.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('front/world/_delete_form.html.twig') }}
{% endblock %}
