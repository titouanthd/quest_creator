{% extends "layouts/front_layout.html.twig" %}

{% block body %}
    <h1>Universe</h1>
    <a class="btn btn-sm btn-secondary" href="{{ path('app_front_universe_index') }}">Back to list</a>
    <a class="btn btn-sm btn-primary" href="{{ path('app_front_universe_edit', {'id': universe.id}) }}">Edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ universe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ universe.name }}</td>
            </tr>
            <tr>
                <th>Worlds</th>
                <td>
                    {% for world in universe.worlds %}
                        <a href="{{path('app_front_world_show', {id: world.id})}}">{{ world.name }}</a>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ universe.createdAt ? universe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ universe.updatedAt ? universe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('front/universe/_delete_form.html.twig') }}
{% endblock %}
