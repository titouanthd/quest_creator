{% extends 'layouts/admin_layout.html.twig' %}

{% block title %}Admin | Dashboard{% endblock %}

{% block body %}
<div class="row">
  <div class="col-12">
    <h1>Admin Dashboard</h1>
  </div>
  <div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">userCount:</h5>
        <span class="display-1 fw-bold">{{user_count}}</span>
      </div>
    </div>
  </div>
  <div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">universeCount:</h5>
        <span class="display-1 fw-bold">{{universe_count}}</span>
      </div>
    </div>
  </div>
</div>
{% endblock %}
